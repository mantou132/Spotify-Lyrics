{
  "name": "Spotify Lyrics",
  "version": "0.0.15",
  "manifest_version": 2,
  "description": "Spotify Web Player lyrics plugin, lyric display in PiP(album cover) window.",
  "web_accessible_resources": [
    "page.js"
  ],
  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  }
}
